<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/re_item_icon_layout">
        <ImageView
            android:id="@+id/iv_item_icon_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/view_bg"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:background="@drawable/bg_black_shape_gratien"
            android:layout_alignParentBottom="true">
        </View>
        <ImageView
            android:id="@+id/iv_private"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/iv_video_private"
            android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>