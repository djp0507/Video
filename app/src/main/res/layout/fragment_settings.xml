<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <com.video.newqu.view.layout.ReboundScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                style="@style/Setting_subtitle_text"
                android:text="网络"/>

                <RelativeLayout
                    android:id="@+id/re_wifi_auto_play"
                    style="@style/Setting_title_style">
                    <TextView
                        style="@style/Setting_title_text"
                        android:text="WIFI网络下自动播放"/>

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/sw_wifi_auto_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:checked="true"
                        android:longClickable="false"
                        app:switchTextAppearance="@style/BrandedSwitch.text"
                        app:theme="@style/BrandedSwitch.control"
                        app:showText="false" />
                    <!--android:textOff="关"
                        android:textOn="开"
                        app:showText="true"
                        -->
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="@color/gray_qian1"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                   />
                <RelativeLayout
                    android:id="@+id/re_wifi_upload"
                    style="@style/Setting_title_style">
                    <TextView
                        style="@style/Setting_title_text"
                        android:text="仅限WIFI网络上传视频"/>

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/sw_wifi_upload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:checked="true"
                        android:longClickable="false"
                        android:textOff="关"
                        android:textOn="开"
                        app:switchTextAppearance="@style/BrandedSwitch.text"
                        app:theme="@style/BrandedSwitch.control"
                        app:showText="false" />

                </RelativeLayout>

                <TextView
                    style="@style/Setting_subtitle_text"
                    android:text="视频制作"/>

                <RelativeLayout
                    android:id="@+id/re_auto_add_watermark"
                    style="@style/Setting_title_style">
                    <TextView
                        style="@style/Setting_title_text"
                        android:text="视频合成输出自动添加水印"/>

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/sw_auto_add_watermark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:checked="true"
                        android:longClickable="false"
                        android:textOff="关"
                        android:textOn="开"
                        app:switchTextAppearance="@style/BrandedSwitch.text"
                        app:theme="@style/BrandedSwitch.control"
                        app:showText="false" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/gray_qian1"/>

                <RelativeLayout
                    android:id="@+id/re_save_video_location"
                    style="@style/Setting_title_style">
                    <TextView
                        style="@style/Setting_title_text"
                        android:text="自动保存制作完成的视频到本地相册"/>

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/sw_save_video_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:checked="true"
                        android:longClickable="false"
                        android:textOff="关"
                        android:textOn="开"
                        app:switchTextAppearance="@style/BrandedSwitch.text"
                        app:theme="@style/BrandedSwitch.control"
                        app:showText="false" />
                </RelativeLayout>

                <TextView
                    style="@style/Setting_subtitle_text"
                    android:text="关于我们"/>


                <RelativeLayout
                    android:id="@+id/re_share"
                    style="@style/Setting_title_style">
                    <ImageView
                        android:id="@+id/iv_share"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/iv_setting_share"/>
                    <TextView
                        android:layout_toRightOf="@+id/iv_share"
                        android:layout_marginLeft="10dp"
                        style="@style/Setting_title_text"
                        android:text="分享给朋友"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/iv_more"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/gray_qian1"/>


                <RelativeLayout
                    android:id="@+id/re_score"
                    style="@style/Setting_title_style">
                    <ImageView
                        android:id="@+id/iv_score"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/iv_setting_scrose"/>
                    <TextView
                        android:layout_toRightOf="@+id/iv_score"
                        android:layout_marginLeft="10dp"
                        style="@style/Setting_title_text"
                        android:text="欢迎评分"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/iv_more"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/gray_qian1"/>

                <RelativeLayout
                    android:id="@+id/re_refresh"
                    style="@style/Setting_title_style">
                    <ImageView
                        android:id="@+id/iv_upload"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/iv_setting_updata"/>
                    <TextView
                        android:layout_toRightOf="@+id/iv_upload"
                        android:layout_marginLeft="10dp"
                        style="@style/Setting_title_text"
                        android:text="检查更新"/>

                    <ImageView
                        android:id="@+id/iv_more"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/iv_more"
                        />
                    <TextView
                        android:id="@+id/tv_verstion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0M"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/iv_more"
                        android:textSize="12sp"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/gray_qian1"/>

                <RelativeLayout
                    android:id="@+id/re_back_message"
                    style="@style/Setting_title_style">
                    <ImageView
                        android:id="@+id/iv_opinion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/iv_setting_message"/>
                    <TextView
                        style="@style/Setting_title_text"
                        android:layout_toRightOf="@+id/iv_opinion"
                        android:layout_marginLeft="10dp"
                        android:text="意见反馈"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/iv_more"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/gray_qian1"/>


                <RelativeLayout
                    android:id="@+id/re_above"
                    style="@style/Setting_title_style">
                    <ImageView
                        android:id="@+id/iv_above"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/iv_setting_about"/>
                    <TextView
                        android:layout_toRightOf="@+id/iv_above"
                        android:layout_marginLeft="10dp"
                        style="@style/Setting_title_text"
                        android:text="关于我们"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/iv_more"
                        />
                </RelativeLayout>


                <TextView
                    style="@style/Setting_subtitle_text"
                    android:text="系统"/>

                <RelativeLayout
                    android:id="@+id/re_empty_cache"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_comment_bg"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">
                    <TextView
                        style="@style/Setting_title_text"
                        android:text="清空缓存"/>
                    <TextView
                        android:id="@+id/tv_cache_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0M"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textSize="12sp"
                        />
                </RelativeLayout>


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:background="@color/background_dark">
                </View>



                <RelativeLayout
                    android:id="@+id/re_bt_unlogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:paddingTop="20dp"
                    android:background="@drawable/item_comment_bg"
                    android:paddingBottom="20dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/bt_submit"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:textColor="@color/text_orgin_selector"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:text="退出登录"
                        android:background="@drawable/btn_appstyle_transpent_selector"
                        />
                </RelativeLayout>
            </LinearLayout>
        </com.video.newqu.view.layout.ReboundScrollView>
    </LinearLayout>
</layout>