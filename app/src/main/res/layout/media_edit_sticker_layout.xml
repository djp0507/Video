<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/video_editback_color"
              android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btn_media_sticker_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_record_close_selector_white"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/btn_empty_sticker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btn_media_sticker_close"
            android:layout_centerVertical="true"
            android:padding="7dp"
            android:src="@drawable/ic_filter_round_min_empty"
            android:background="?attr/selectableItemBackground"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.androidkun.xtablayout.XTabLayout
                android:id="@+id/sticker_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                app:xTabMode="fixed"
                app:xTabIndicatorColor="@color/white"
                app:xTabIndicatorHeight="1dp"
                app:xTabIndicatorWidth="20dp"
                app:xTabSelectedTextColor="@color/white"
                app:xTabTextColor="@color/tab_text_unselector_color"
                app:xTabTextSize="15sp"
                app:xTabSelectedTextSize="16sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#FF555555"
                />
            <android.support.v4.view.ViewPager
                android:id="@+id/sticker_tab_viewpager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_sticker_loading_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:clickable="true">
            <ImageView
                android:id="@+id/iv_sticker_loading_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/loading_anim"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:text="加载中，请稍后..."
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sticker_loading_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:clickable="true">
            <ImageView
                android:id="@+id/iv_sticker_error_icon"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/iv_loaddata_error"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/common_h3"
                android:layout_marginTop="10dp"
                android:text="加载失败，点击重试"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>