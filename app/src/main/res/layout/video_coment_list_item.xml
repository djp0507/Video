<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <ImageView
                android:id="@+id/iv_item_icon"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:src="@drawable/iv_mine"/>
            <LinearLayout
                android:layout_toRightOf="@+id/iv_item_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/common_h1"
                    android:text="--"/>
                <TextView
                    android:id="@+id/tv_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_h2"
                    android:layout_marginTop="5dp"
                    android:textSize="11sp"
                    android:text="00:00"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="73dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/tv_item_coment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.0"
                android:textColor="@color/item_title"
                android:textSize="14sp"
                android:text="--"/>
        </RelativeLayout>

        <View
            android:id="@+id/iv_item_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_background_color"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="15dp"></View>
    </LinearLayout>
</LinearLayout>
