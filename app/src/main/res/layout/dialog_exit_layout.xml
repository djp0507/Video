<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <!--<TextView-->
        <!--android:id="@+id/tv_title"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="center_horizontal|center_vertical"-->
        <!--android:textSize="17sp"-->
        <!--android:padding="16dp"-->
        <!--android:textColor="@color/black"-->
        <!--android:text="退出提示"-->
        <!--android:background="@drawable/diallog_top_title_bg_app_style"/>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/diallog_top_title_bg_app_style">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:textSize="19sp"
            android:textColor="@color/common_h1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginLeft="15dp"
            android:text="确定要退出新趣视频吗？"/>
    </RelativeLayout>

    <!--顶部分割线-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/white">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/gray_qian">
        </View>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="再逛逛"
            android:gravity="center"
            android:textColor="@color/text_black2_selector"
            android:background="@drawable/bt_save_red_left_selector"/>
        <!--bt_save_red_left_selector-->
        <!-- 两个按钮之间的竖直分割线-->
        <RelativeLayout
            android:layout_width="0.2dp"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:layout_weight="0"
            android:paddingTop="5dp"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/gray_qian"></View>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="确定"
            android:gravity="center"
            android:textColor="@color/text_orgin_selector"
            android:background="@drawable/bt_save_red_right_selector"/>
        <!--bt_save_red_right_selector-->
    </LinearLayout>
</LinearLayout>