<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/video_editback_color"
              android:gravity="center"
              android:padding="10dp"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal">
        <!--            android:background="@drawable/bg_media_edit_radius_selector"-->
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="宽高比"
            android:textColor="#ffffff"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/click_to_9_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:16"
            android:textColor="@color/text_white_selector"
            android:background="@drawable/bg_media_edit_radius_selector"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/click_to_3_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white_selector"
            android:text="3:4"
            android:background="@drawable/bg_media_edit_radius_selector"
            android:layout_marginLeft="12dp"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/click_to_1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white_selector"
            android:background="@drawable/bg_media_edit_radius_selector"
            android:layout_marginLeft="12dp"
            android:text="1:1"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="裁剪模式"
            android:textColor="#ffffff"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/video_scale_fit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="填充"
            android:textColor="@color/text_white_selector"
            android:background="@drawable/bg_media_edit_radius_selector"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/video_scale_crop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="裁剪"
            android:layout_marginLeft="12dp"
            android:textColor="@color/text_white_selector"
            android:background="@drawable/bg_media_edit_radius_selector"
            android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>