<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.video.newqu.view.widget.ZoomScrollView
                android:id="@+id/scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:zoomId="@+id/iv_icon"
                app:maxZoom="150dp"
                android:fillViewport="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!--TopHeader-->
                    <RelativeLayout
                        android:id="@+id/re_header"
                        android:layout_width="match_parent"
                        android:layout_height="310dp">
                        <ImageView
                            android:id="@+id/img_item_bg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bg_live_transit"/>
                        <LinearLayout
                            android:id="@+id/ll_header_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingTop="20dp"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/iv_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/jpush_notification_icon"
                                android:scaleType="centerCrop"
                                />
                            <TextView
                                android:id="@+id/tv_verstion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textColor="@color/white"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="30dp"
                                android:text="当前版本：V1.2.6"/>
                            <TextView
                                android:id="@+id/bt_checked_upload"
                                android:layout_width="wrap_content"
                                android:paddingLeft="50dp"
                                android:paddingRight="50dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bt_transpent_selector"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="12dp"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:textColor="@color/text_app_style_unwhite_selector"
                                android:text="检查更新"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <!--BottomContent-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="30dp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textColor="@color/common_h2"
                            android:textSize="16sp"
                            android:text="        新趣是一个专为用户提供视频播放和分享的平台。 在这里你不仅可以观看各种有趣的短视频，同时也可以通过短视频把你的生活点滴分享给其他人。
        当然和粉丝互动或者点评其他视频也是很有意思的。 还等什么，快来上传短视频吧，让新趣和世界认识你。"
                            android:lineSpacingMultiplier="1.4"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </com.video.newqu.view.widget.ZoomScrollView>


