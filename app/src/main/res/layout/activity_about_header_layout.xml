<?xml version="1.0" encoding="utf-8"?>

<layout >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_item_bg"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_live_transit"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingTop="20dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/jpush_notification_icon"
                    />
                <TextView
                    android:id="@+id/tv_verstion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:text="当前版本：V1.2.6"/>
                <TextView
                    android:id="@+id/bt_checked_upload"
                    android:layout_width="wrap_content"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bt_transpent_selector"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="12dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/text_app_style_unwhite_selector"
                    android:text="检查更新"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</layout>