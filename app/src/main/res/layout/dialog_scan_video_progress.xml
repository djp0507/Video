<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/updata_bg_wihte">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">
            <TextView
                android:id="@+id/tv_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>
            <RelativeLayout
                android:id="@+id/re_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp">
                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="180dp"
                    android:layout_height="220dp"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:id="@+id/iv_finlish"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/scan_finlish"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>
            </RelativeLayout>
            <TextView
                android:layout_below="@+id/re_icon"
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/common_h2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="扫描中...请稍后"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/bt_login_close_selector"
            android:background="@drawable/dialog_close_bg_selector"/>
    </RelativeLayout>
</layout>
