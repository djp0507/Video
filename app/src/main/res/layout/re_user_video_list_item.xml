<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:id="@+id/re_item_video"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:transitionName="@string/transition_movie_img">

        <ImageView
            android:id="@+id/iv_item_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <!--image_bg-->
        <LinearLayout
            android:id="@+id/ll_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:paddingTop="20dp"
            android:background="@drawable/bg_black_shape_gratien">
            <TextView
                android:id="@+id/tv_item_desp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingBottom="3dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:maxLines="2"
                android:textColor="@color/white"
                android:shadowColor="#88000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:text=""
                android:textSize="14sp"
                android:visibility="invisible"
                android:layout_above="@+id/ll_bottom_title"/>
            <LinearLayout
                android:id="@+id/ll_bottom_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp">
                <LinearLayout
                    android:id="@+id/ll_user_data"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:visibility="visible">
                    <ImageView
                        android:id="@+id/iv_item_author_icon"
                        android:layout_width="19dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/iv_mine"/>
                    <TextView
                        android:id="@+id/tv_item_author_name"
                        style="@style/video_find_title"
                        android:layout_marginLeft="5dp"
                        android:text="--"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:layout_gravity="center_vertical">
                    <!--评论-->
                    <LinearLayout
                        android:id="@+id/ll_commend_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="visible">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_mine_works_commend_icon"/>
                        <TextView
                            android:id="@+id/tv_item_commend_count"
                            style="@style/video_find_title"
                            android:layout_marginLeft="3dp"
                            android:text="--"/>
                    </LinearLayout>

                    <!--收藏-->
                    <LinearLayout
                        android:id="@+id/ll_follow_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">
                        <ImageView
                            android:id="@+id/iv_item_follow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_follow_white"/>
                        <TextView
                            android:id="@+id/tv_item_follow_count"
                            style="@style/video_find_title"
                            android:layout_marginLeft="3dp"
                            android:text="--"/>
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <!--状态和设置-->
        <ImageView
            android:id="@+id/iv_private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_video_private"
            android:visibility="gone"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_item_menu_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="gone"
                android:background="@color/media_text_bg">
                <TextView
                    android:id="@+id/tv_item_delete_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_margin="6dp"
                    android:textSize="11sp"
                    android:drawablePadding="5dp"
                    android:text="删除视频"
                    android:drawableTop="@drawable/btn_video_edit_delete_selector"/>
                <TextView
                    android:id="@+id/tv_item_public_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_margin="6dp"
                    android:drawablePadding="5dp"
                    android:textSize="11sp"
                    android:text="公开视频"
                    android:drawableTop="@drawable/btn_video_edit_public_selector"/>

                <TextView
                    android:id="@+id/tv_item_unfollow_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_margin="6dp"
                    android:drawablePadding="5dp"
                    android:textSize="11sp"
                    android:text="取消收藏"
                    android:drawableTop="@drawable/btn_video_edit_unfollow_selector"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/btn_item_menu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/btn_video_edit_menu_selector"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>

