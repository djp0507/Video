<?xml version="1.0" encoding="utf-8"?>

<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/rl_empty_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="90dp">

            <ImageView
                android:id="@+id/ivEmptyView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_list_empty_icon"/>
            <TextView
                android:id="@+id/tvEmptyView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_icon"
                android:layout_gravity="center_horizontal"
                android:textSize="13sp"
                android:textColor="@color/common_h3"
                android:layout_marginTop="20dp"
                android:text="你关注的用户还没有发布作品~"/>

            <!--点击的按钮-->

            <TextView
                android:id="@+id/btn_submit"
                android:layout_toRightOf="@+id/iv_icon"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/text_orgin_selector"
                android:background="@drawable/btn_appstyle_transpent_selector"
                android:text="随便逛逛"/>

        </LinearLayout>
    </RelativeLayout>
</layout>
